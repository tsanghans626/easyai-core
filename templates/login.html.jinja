{% extends "base.html.jinja" %}
{% block title %}EasyAI后台{% endblock %}
{% block content %}
<!-- 左侧背景图区域 -->
<div class="min-h-screen flex flex-col md:flex-row">
  <div class="md:w-3/5 h-48 md:h-screen relative bg-gray-200">
    <div class="absolute inset-0 bg-[url('https://source.unsplash.com/random/1920x1080?nature')] bg-cover bg-center">
      <div class="absolute inset-0 bg-black/30 flex items-center justify-center">
        <h1 class="text-4xl font-bold text-white text-center p-4">
          欢迎登录我们的系统
        </h1>
      </div>
    </div>
  </div>

  <!-- 右侧登录区域（修改为平铺样式） -->
  <div class="md:w-2/5 flex items-center justify-center p-8 bg-base-100">
    <div class="w-full max-w-md space-y-6">
      <!-- 标题部分 -->
      <div class="text-center">
        <h1 class="text-3xl font-bold mb-2">欢迎回来</h1>
        <p class="text-gray-500">请输入您的账号信息</p>
      </div>

      <!-- 直接平铺的表单 -->
      <form hx-post="/api/login" hx-target="#login-result" hx-swap="innerHTML"
        enctype="application/x-www-form-urlencoded" class="space-y-4">
        <!-- 用户名输入 -->
        <div class="form-control">
          <label class="label">
            <span class="label-text">用户名</span>
          </label>
          <input type="text" name="username" placeholder="请输入用户名" class="input input-bordered input-lg" required>
        </div>

        <!-- 密码输入 -->
        <div class="form-control">
          <label class="label">
            <span class="label-text">密码</span>
          </label>
          <input type="password" name="password" placeholder="请输入密码" class="input input-bordered input-lg" required>
        </div>

        <!-- 错误提示 -->
        <div id="login-result"></div>

        <!-- 提交按钮 -->
        <button type="submit" class="btn btn-primary btn-block btn-lg mt-6">
          立即登录
        </button>
      </form>
    </div>
  </div>

  <!-- 错误提示模板 -->
  <template id="error-template">
    <div class="alert alert-error">
      <svg xmlns="http://www.w3.org/2000/svg" class="stroke-current shrink-0 h-6 w-6" fill="none" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
          d="M10 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2m7-2a9 9 0 11-18 0 9 9 0 0118 0z" />
      </svg>
      <span class="error-message"></span>
    </div>
  </template>
</div>
{% endblock %}